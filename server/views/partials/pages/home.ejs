<main>
  <div class="container">
    <div class="row g-5 py-5">
      <section class="mt-3">
        <div class="row p-4 rounded bg-extra-dark" aria-label="About Me">
          <div class="col portrait rounded order-2" style="aspect-ratio: 1/1;">
            <img src="/images/bjornar-profile-pic.jpg" width="100%" alt="Picture of me">
          </div>
          <div class="col-8 col-lg-9 col-xl-10 order-1">
            <p class="fw-bold fs-4 fs-xl-1">Hello!</p>
            <p>
               I'm a software engineer in training and all-around creative soul residing in Toronto. I enjoy the whole process of creating software: modelling, writing, designing and deploying.
            </p>
            <a href="/about" class="">Learn more</a>
          </div>
        </div>
      </section>
      <section class="col-12 col-lg-10 col-xl-8">
        <header class="my-5">
          <h2 class="">Project Highlights</h2>
          <hr>
        </header>
        <div class="card-grid row row-cols-1 row-cols-md-2 g-4 py-3">
          <% data.highlights.map((item) => {  %>
          <article class="col">
            <%- include('../components/card', {headerLevel: 3, noTags: true, minimalStyle: true, card: { image: item.image.thumbnail, title: item.title, url: "/projects/" + item.name}}) %>
          </article>
          <% }) %>
        </div>
        <div class="mt-5">
          <div class="bg-extra-dark p-4 rounded d-flex justify-content-center">
            <a href="/projects" class="btn btn-primary fs-4">
              More projects
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentcolor" style="height: 1.4em">
                <path d="M10 20A10 10 0 1 0 0 10a10 10 0 0 0 10 10zM8.711 4.3l5.7 5.766L8.7 15.711l-1.4-1.422 4.289-4.242-4.3-4.347z" />
              </svg>
            </a>
          </div>
        </div>
      </section>
    </div>
  </div>
</main>
